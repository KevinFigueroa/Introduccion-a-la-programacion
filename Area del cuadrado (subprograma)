#include "stdafx.h"
#include <iostream>
#include "conio.h"
int area_cuadrado (int l);
using namespace std;

int main ()
{
        int l,area;
        cout<<"Ingrese el lado del cuadrado: ";
		cin>>l;
        area=area_cuadrado(l);
        cout<<"El area es: "<<area<<"";
        getch ();
        return 0;
}
int area_cuadrado (int l)
{ 
	int area;
	area=l*l;
	return area;
}
